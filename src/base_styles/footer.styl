/*
* FOOTER
*/

.main-footer
  background-color content_bg_color
  background-color content_bg_color_alpha
  padding 2%
  a
    color dark_brown
  address:first-of-type
    border-bottom 2px dashed border_color
    margin-bottom 1%
    padding-bottom 1%
  .created, .source
    font-size 85%


[class*="footer-widget"]
  padding 2%
  p
    margin-bottom 0

.site-generator, .site-created
  font-size 80%

.credits
  float right

@media screen_breakpoint_two
  .credits
    float left
@media screen_breakpoint_three
  .site-generator
    .copyright
      display block