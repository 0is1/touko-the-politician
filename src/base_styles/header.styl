/*
* HEADER
*/

.main-header
  margin-top 1%
  position relative
  > .container
    margin 0
    max-width none
    padding 7% 0 5%
    position relative
    z-index 2
    .site-description
      font-size 90%
      font-weight 300
      line-height 2
  .hgroup-wrap
    padding 0
    .hgroup-right, .site-header
      margin 0
    .hgroup-right
      float right
    .site-titles
      margin-left 200px
      text-align left
    .touko-head
      bottom 0
      height 200px
      left 0
      overflow hidden
      position absolute
      width 200px
      z-index -1
  .main-header-image
    left 0
    position absolute
    top 0
    z-index 1
  .site-title a
    color basic_font
    font-size 130%
    font-weight 600
    letter-spacing -2px
    text-transform uppercase
.hgroup-wrap a
  display inline

#main-nav
  background-color vihreat_de_grona
  border 1px solid dark_brown
  box-shadow inset 0 1px 1px box_shadow
  color white
  cursor pointer
  margin 0
  position relative
  text-shadow 0 1px 1px rgba(0, 0, 0, 0.4)
  z-index 2
  a
    color white
    display block
    float left
    font-size 90%
    height auto
    padding .8em
    text-transform uppercase
  a:hover, ul li.current-menu-item a,ul li.current_page_ancestor a, ul li.current-menu-ancestor a, ul li.current_page_item a, ul li:hover > a
    background-color vihreat_de_grona
    box-shadow inset 0 0 4px rgba(0, 0, 0, 0.2)
    color white
    opacity 1
  ul
    margin 0
    li
      float left
      padding 0
      position relative
      ul
        background-color white
        border-bottom 2px solid vihreat_de_grona
        display none
        left 0px
        position absolute
        top 100%
        width 100%
        li
          border-bottom 1px solid grayish
          border-left 1px solid grayish
          border-right 1px solid grayish
          float none
          a
            background-color white
            color basic_font
            float none
            font-size 80%
            height 100%
            padding 0.7em
            text-transform capitalize
          &:hover > a
            background-color grayish
            box-shadow none
            color vihreat_de_grona
      &:hover ul
        display block
        text-shadow none
  select
    display none

@media screen_breakpoint_one
  .main-header
    .hgroup-wrap
      .site-titles
        text-align right

@media screen_breakpoint_two
  #main-nav
    height auto
    padding 2%
    ul
      display none
    select
      border none
      display block
      height 24px
      width 100%
  .main-header
    .hgroup-wrap
      .touko-head
        height 150px
        width 150px
      .site-titles
        margin-left 150px

@media screen_breakpoint_three
  .main-header
    > .container
      .site-description
        font-size 80%