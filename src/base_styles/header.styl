/*
* HEADER
*/

.main-header
  margin-top 1%
  position relative
  > .container
    margin 0
    max-width none
    padding 7% 0 5%
    position relative
    z-index 2
    .site-description
      font-size 90%
      font-weight 300
      line-height 2
  .hgroup-wrap
    padding 0
    .hgroup-right, .site-header
      margin 0
    .site-titles
      margin-left 200px
      text-align left
    .touko-head
      bottom 0
      height 200px
      left 0
      position absolute
      z-index -1
  .main-header-image
    left 0
    position absolute
    top 0
    z-index 1
  .site-title a
    color rgb(45, 45, 45)
    font-size 130%
    font-weight 600
    letter-spacing -2px
    text-transform uppercase
.hgroup-wrap a
  display inline

#main-nav
  background-color rgb(97, 191, 26)
  z-index 2
  a
    color #fff
    display block
    float left
    font-size 90%
    height auto
    padding .8em
    text-transform uppercase
  a:hover, ul li.current-menu-item a,ul li.current_page_ancestor a, ul li.current-menu-ancestor a, ul li.current_page_item a, ul li:hover > a
    background-color rgb(97, 191, 26)
    box-shadow inset 0 0 4px rgba(0, 0, 0, 0.2)
  ul li ul
    background-color #fff
    border-bottom 2px solid #61bf1a
    left 0px
    position absolute
    top 100%
    width 190px

@media only screen and (max-width: 800px)
  .main-header
    .hgroup-wrap
      .site-titles
        text-align right

@media only screen and (max-width: 767px)
  #main-nav
    height auto
    padding 2%

@media only screen and (max-width: 767px)
  .main-header
    .hgroup-wrap
      .touko-head
        height 150px
        width 150px
      .site-titles
        margin-left 150px