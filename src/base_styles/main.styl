/*
* MAIN
*/
.container
  max-width 1018px
.wrapper
  background-color transparent
  box-shadow none
  margin 0 auto
  max-width 1018px
  min-width 300px

.entry-content p
  margin-bottom 2%
  &:last-of-type
    margin-bottom 0

ul
  margin 0

#main
  background-color rgba(248, 248, 248, 0.5)
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.2)

@media only screen and (max-width: 600px)
  #main
    padding 0
  .one-column-template .container, .container
    width 100%