/*
* SLIDER
*/

.featured-slider, .featured-slider .slider-cycle
  z-index 1
.featured-text
  background-color rgb(197, 197, 197)
  background-color rgba(197, 197, 197, 0.35)
  bottom 15%
  font-size 95%
  left 45%
  overflow auto
  right 15%
  top 10%
  width auto
  left 5%
  right 5%
  .featured-title
    font-size 200%
.featured-content
  a
    color rgb(255, 255, 255)
#controllers
  bottom 5%
  a
    background-color rgba(225,225,225,0.7)
    color #333
    line-height 1.5
    height auto
    padding 2%
    width 10%

#controllers a.active, #controllers a:hover
  background-color rgb(97, 191, 26)
  background-color rgba(97, 191, 26, 0.95)
  color #333

@media only screen and (max-width: 767px)
  .featured-title, .featured-content, .featured-text
    display block
  .featured-text
    left 5%
    right 5%