/*
* SLIDER
*/
@import '../theme_styles/colors.styl'
@import '../theme_styles/mediaqueries.styl'

.featured-slider, .featured-slider .slider-cycle
  z-index 1
.featured-text
  background-color transparent
  background-color slider_background
  border none
  border-radius 4px
  bottom 15%
  box-shadow none
  clear right
  color white
  float right
  font-size 95%
  left 5%
  overflow auto
  margin 0
  padding 2%
  position absolute
  right 5%
  text-align right
  text-shadow 0 2px 2px slider_background
  top 10%
  width auto
  .featured-title
    font-size 200%
.featured-content
  a
    color white
#controllers
  bottom 5%
  a
    background-color grayish_alpha
    color #333
    line-height 1.5
    height auto
    padding 2%
    width 10%

#controllers a.active, #controllers a:hover
  background-color vihreat_de_grona
  background-color vihreat_de_grona_alpha
  color #333

@media screen_breakpoint_two
  .featured-title, .featured-content, .featured-text
    display block
  .featured-text
    left 5%
    right 5%