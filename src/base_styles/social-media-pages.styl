/*
* FACEBOOK AND TWITTER PAGES
*/
@import '../theme_styles/colors.styl'
@import '../theme_styles/mediaqueries.styl'

.social-media-boxes
  margin 2% 0
  > div
    margin 0 1% 1%
    max-width 520px
    min-height 180px
    width 48%

.facebook-page
  > section
    padding 1%
  .in-facebook
    background-color rgb(237, 239, 244)
    border-bottom 1px solid rgb(216, 223, 234)
    p
      font-size 80%
      font-weight 600
      margin 0
      padding 1%
  .page-link
    margin-bottom 2%
  .fb-like
    max-width 100%
    overflow auto

.facebook-box, .twitter-page
  border 1px solid rgba(0, 0, 0, 0.1)
  font-size 95%

.facebook-box
  background-color grayish

.twitter-page
  background-color grayish_alpha
  a
    color rgb(51, 51, 51)
  > section
    padding 1%
  .in-twitter
    background-color white
    border-bottom 1px solid rgba(0, 0, 0, 0.1)
    p
      font-size 80%
      font-weight 600
      margin 0
      padding 1%
  .twitter-user-details
    background-position center
    color white
    position relative
    text-align center
    text-shadow 1px 1px 1px rgb(20, 20, 20)
    h1, a
      color white
    a:hover
      text-decoration underline
    .twitter-page-img
      float none
      display block
      margin 2% auto 0
      img
        border 2px solid white
  .twitter-user-description, .twitter-user-location
    font-size 85%
    text-align center
  .twitter-page-details
    font-size 85%
    ul, li
      display inline-block
    li
      border-left 1px solid rgb(232, 232, 232)
      padding .25em .75em
      &:first-of-type
        border-left none
      &:hover span
        color basic_font
      span
        color #999
        display block
        font-size 80%
        text-transform uppercase
    .follow-button
      float right
      margin-top 4px

@media screen_breakpoint_one
  .social-media-boxes
    float none
    width 100%
    > div
      width 100%