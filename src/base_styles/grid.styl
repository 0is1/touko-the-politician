/*
* GRID
*/

@import '../theme_styles/mediaqueries.styl'
[class*="grid-"]
  position relative

.grid-100
  width 100%

.grid-50
  width 50%

.grid-50-with-gap
  width 49%
  &:nth-of-type(even)
    margin 1% 1% 0 0
  &:nth-of-type(odd)
    margin 1% 0 0 0
@media screen_breakpoint_one
  .grid-50-with-gap
    width 100%